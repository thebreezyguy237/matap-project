<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" fx:id="restoPane" prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="controllers.RestaurantProfileController">
   <children>
      <HBox layoutY="54.0" prefHeight="219.0" prefWidth="800.0">
         <children>
            <ImageView fx:id="restoImg" fitHeight="219.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <VBox alignment="CENTER" layoutY="300.0" prefHeight="200.0" prefWidth="800.0" spacing="15.0">
         <children>
            <Label fx:id="restoName" text="Restaurant Name">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="restoSlogan" text="Restaurant Slogan">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="14.0" prefWidth="800.0">
               <children>
                  <Label fx:id="restoCountry" text="Restaurant Country">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Label text="•">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="restoCity" text="Restaurant City" />
                  <Label text="•">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="restoStreet" text="Restaurant Street" />
               </children>
            </HBox>
            <Label fx:id="restoPhone" text="Restaurant  phoneNumber" />
         </children>
      </VBox>
      <Button layoutX="339.0" layoutY="534.0" mnemonicParsing="false" onAction="#loadRestoProducts" text="See all our products" />
   </children>
</AnchorPane>
